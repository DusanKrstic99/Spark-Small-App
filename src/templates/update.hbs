{{#if poziv}}
<div class="container-fluid">
    <form action="/snimiIzmene" method="post" autocomplete="off">
        <div class="form-group">
        <label for="ime">Ime</label>
        <input type="text" name="ime" class="form-control" id="ime" value="{{student.ime}}">
    </div>
        <div class="form-group">
            <label for="prezime">Prezime</label>
            <input type="text" name="prezime" class="form-control" id="prezime" value="{{student.prezime}}">
        </div>
        <div class="form-group">
            <label for="gender">Pol</label>
            <select id="gender" name="gender" class="form-control" value="{{student.gender}}">
                <option value="Male" >Muski</option>
                <option value="Female">Zenski</option>
            </select>
        </div>
        <button type="submit" class="btn btn-outline-dark">Izmeni studenta</button>
    </form>
</div>
{{/if}}
{{#if potvrda}}
        <div class="p-3 mb-2 bg-success text-white">{{potvrda}}</div>
{{/if}}
{{#if izmena}}
    <div class="container-fluid">
        <form action="/snimiPredmet" method="post" autocomplete="off">
            <div class="form-group">
                <label for="ime">Ime</label>
                <input type="text" name="ime" class="form-control" id="ime" value="{{student.ime}}">
            </div>
            <div class="form-group">
                <label for="Ocena">Ocena</label>
                <input type="number" min="6" max="10" name="ocena" class="form-control" id="ocena" >
            </div>
            <div class="form-group">
                <label for="Semestar">Semestar</label>
                <input type="number" min="1" max="6" name="semestar" class="form-control" id="semestar" >
            </div>
            <div class="form-group">
                <label for="espb">ESPB poena</label>
                <select id="espb" name="espb" class="form-control">
                    <option value="4" >4</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
            </div>
            <button type="submit" class="btn btn-outline-dark">Dodaj predmet</button>
        </form>
    </div>
{{/if}}
